<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Common inertial properties -->
  <xacro:property name="default_mass" value="0.1"/>
  <xacro:property name="default_inertia" value="0.001"/>

  <!-- Default material definitions -->
  <material name="light_black">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="dark">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>

  <material name="orange">
    <color rgba="1.0 0.5 0.0 1.0"/>
  </material>

  <!-- Common dimensions -->
  <xacro:property name="wheel_radius" value="0.033"/>
  <xacro:property name="wheel_width" value="0.018"/>
  <xacro:property name="caster_radius" value="0.005"/>

</robot>